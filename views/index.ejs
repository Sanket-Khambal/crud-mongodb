<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="tasks content">
    <h2>All Tasks</h2>

    <% if (tasks.length > 0) { %>
      <% tasks.forEach(task => { %>
        <a class="single" href="/tasks/<%= task._id %>">
          <h3 class="description"><%= task.description %></h3>
          <p class="completed"><%= task.completed %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no tasks to display...</p>
    <% } %>
    
  </div>

  
</body>
</html>